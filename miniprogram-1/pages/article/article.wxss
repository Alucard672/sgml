/* article.wxss */
.container {
  background: var(--bg-main);
  padding: 24rpx 20rpx;
  min-height: 100vh;
  color: #444;
  font-family: 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
}

.category-title {
  margin: 20rpx 0 30rpx 0;
  font-size: 40rpx;
  font-weight: 600;
  color: #1e71ca;
  text-align: center;
  letter-spacing: 2rpx;
}

.article-list {
  width: 100%;
}

.article-item {
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 4rpx 24rpx rgba(30,113,202,0.10), 0 1rpx 4rpx rgba(0,0,0,0.04);
  margin-bottom: 24rpx;
  padding: 24rpx;
  display: block;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #202020;
  margin-bottom: 8rpx;
  word-break: break-all;
  white-space: normal;
  display: block;
}

.article-summary {
  font-size: 26rpx;
  color: #7A8CA5;
  margin-bottom: 10rpx;
  word-break: break-all;
  white-space: normal;
  display: block;
}

.article-meta {
  color: #8BAE9A;
  font-size: 24rpx;
  margin-top: 8rpx;
  display: flex;
  gap: 20rpx;
}

.article-views {
  color: #8BAE9A;
}

.empty {
  text-align: center;
  color: #aaa;
  margin-top: 80rpx;
  font-size: 28rpx;
}

/* 加载和错误状态 */
.loading, .error {
  text-align: center;
  color: #bbb;
  margin: 40rpx 0;
}

/* 按钮样式 */
.btn-primary {
  background: #007AFF;
  color: #fff;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  border: none;
}

/* 主题色变量 */
page {
  --bg-main: #F8FAFC;
} 